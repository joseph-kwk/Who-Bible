{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "tools/**",
      "*.md",
      "package.json",
      "package-lock.json",
      "test_*.js",
      "*.backup.*"
    ],
    "redirects": [
      {
        "source": "**",
        "destination": "https://your-app-name.web.app",
        "type": 301
      }
    ],
    "cleanUrls": true,
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, must-revalidate"
          }
        ]
      },
      {
        "source": "**/*.@(json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
